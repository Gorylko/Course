
@{
    ViewBag.Title = "Все товары";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Магазин</title>
</head>
<body>
    <div>
        <h3>Распродажа товара</h3>
        <table>
            <tr>
                <td><p>Название товара</p></td>
                <td><p>Категория</p></td>
                <td><p>Цена</p></td>
                <td></td>
            </tr>
            @foreach (var product in ViewBag.Products)
            {
                <tr>
                    <td width="150px"><p>@product.Name</p></td>
                    <td width="150px"><p>@product.Category.Name</p></td>
                    <td width="50px"><p>@product.Price</p></td>
                    <td>
                        <form action="~/Product/ShowProductInfo">
                            <div>
                                <button type="submit">Открыть</button>
                                <input type="hidden" value="@product.Id" name="id" />
                            </div>
                        </form>
                    </td>
                </tr>
            }
        </table>
    </div>
</body>
</html>
