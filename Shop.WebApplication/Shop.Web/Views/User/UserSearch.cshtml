@using Shop.Web.Models;
@using Shop.Shared.Entities.Authorize;
@{
    ViewBag.Title = "Пользователи";
    var currentUser = User as UserPrinciple;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
</head>
<body>
    <h3>Поиск пользователя</h3>

    @using (Ajax.BeginForm("ShowSearchUsers", "User", new AjaxOptions { UpdateTargetId = "results" }))
    {
        <table>
            <tr>
                <td>
                    <input type="text" name="Name" class="form-control" />
                </td>
                <td>
                    <button class="btn" type="submit" name="action">Найти</button>
                </td>
            </tr>
        </table>
    }
    <div id="results"></div>
    <br />


</body>
</html>
